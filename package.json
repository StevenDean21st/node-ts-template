{
  "name": "node-ts-template",
  "version": "0.0.0",
  "main": "bin/index.js",
  "type": "module",
  "types": "index.d.ts",
  "scripts": {
    "init": "pnpm install -D nodemon ts-node typescript @types/node",
    "dev": "nodemon --exec ts-node lib/index.ts --project ./tsconfig.json",
    "dev:nowatch": "ts-node lib/index.ts --project ./tsconfig.json",
    "build": "tsc --build --verbose",
    "start": "node bin/index.js"
  }
}
