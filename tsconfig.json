{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
    "compilerOptions": {
      "module": "ESNext",
    }
  },
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "./lib",
    "outDir": "./bin",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "diagnostics": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "bin"
  ],
}
